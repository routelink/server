{
  "name": "@routelink/server",
  "version": "0.0.1",
  "description": "RouteLink server app",
  "main": "src/index.ts",
  "scripts": {
    "postinstall": "npx husky install",
    "start": "nodemon --require tsconfig-paths/register src/index.ts",
    "build": "tsc && tsc-alias",
    "test:dev": "vitest",
    "test": "vitest run",
    "typecheck": "tsc --noEmit --strict --incremental false --tsBuildInfoFile null --project tsconfig.json",
    "prettier": "prettier -w .",
    "prepare": "if [ \"$NODE_ENV\" != \"production\" ]; then husky; fi",
    "db:migrate": "sequelize db:migrate --models-path=src/models",
    "db:fixtures": "sequelize db:seed:all --models-path=src/models"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.11.5",
    "pg-hstore": "^2.3.4",
    "pg-pool": "^3.6.2",
    "reflect-metadata": "^0.2.2",
    "sequelize": "^6.37.3",
    "sequelize-typescript": "^2.1.6",
    "socket.io": "^4.7.5"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@taiga-ui/commitlint-config": "^0.7.5",
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/morgan": "^1.9.9",
    "@types/passport-jwt": "^4.0.1",
    "@types/pg": "^8.11.6",
    "@types/sequelize": "^4.28.20",
    "@types/supertest": "^6.0.2",
    "@types/validator": "^13.11.10",
    "@typescript-eslint/eslint-plugin": "^7.8.0",
    "@typescript-eslint/parser": "^7.8.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "sequelize-cli": "^6.6.2",
    "standard-version": "^9.5.0",
    "supertest": "^7.0.0",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.10",
    "tsconfig-paths": "^4.2.0",
    "tslib": "^2.6.2",
    "typescript": "^5.4.5",
    "vitest": "^1.6.0"
  },
  "commitlint": {
    "extends": [
      "@taiga-ui/commitlint-config"
    ]
  },
  "lint-staged": {
    "*.{yml,yaml,js,ts,md,json}": [
      "prettier -w"
    ]
  },
  "standard-version": {
    "types": [
      {
        "type": "feat",
        "section": "Features"
      },
      {
        "type": "fix",
        "section": "Bug Fixes"
      },
      {
        "type": "deprecate",
        "section": "Deprecations"
      }
    ]
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "^4.17.2",
    "@rollup/rollup-win32-x64-msvc": "^4.17.2"
  }
}
